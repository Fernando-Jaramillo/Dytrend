<p>this is my user: <%= @user.username %></p>

<% @user.sales.each do |sale| %>
    <p><%= sale.kind %></p>
    <p><%= sale.gender %></p>
    <p><%= sale.brand %></p>
    <p><%= sale.description %></p>
    <p><%= sale.price %></p>
<% end %>

<% sum = 0 %>
<% @user.ratings.each do |r| %>
    <%sum += r.rating %>
<%end %>
<%= sum/@user.ratings.length if @user.ratings.length != 0 %>

<%= form_with model: [@user, Rating.new] do |f|%>
    <div> Rate me from 1 to 5: <%= f.select :rating, [1,2,3,4,5], required: true %></div>
    <div> Description: <%= f.text_area :description, required: true %></div>
    <%= f.submit %>
<% end %>
<%= image_tag @sale.pic, class: "my-pic" %>
<p><%= @sale.kind %></p>
<p><%= @sale.gender %></p>
<p><%= @sale.brand %></p>
<p><%= @sale.description %></p>
<p><%= @sale.price %></p>

<% if current_user == @post.user %>
    <%= button_to "Delete", @post, method: :delete %>
    <%= button_to "Edit", "/posts/#{@post.id}/edit", method: :get %>
<% end %>


<%= link_to @post.user.email, user_path %>
<% @sales.each do |sale|%>
    <%= link_to(image_tag(sale.pic), sale) if sale.pic.attached? %>
    <p><%= sale.user.username %></p>
    <p><%= sale.kind %></p>
    <p><%= sale.gender %></p>
    <p><%= sale.size %></p>
    <p><%= sale.brand %></p>
    <p><%= sale.description %></p>
    <p><%= sale.price %></p>
    <p><%= link_to sale.user.email, sale.user%></p>

<% end %>
